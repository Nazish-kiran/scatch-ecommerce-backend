<%- include('./partials/header') %> 
<div class="w-full min-h-screen flex items-start px-0 md:px-20 py-20 gap-10 flex-col pb-10">
<% if (user.cart.length === 0) { %>
    <div class="w-full flex justify-center items-center h-64 text-center bg-gray-200 rounded-lg shadow-lg">
        <h3 class="text-xl font-semibold text-gray-600">Your cart is empty. Add items to your cart to proceed!</h3>
    </div>
<% } else { %>
    
<% user.cart.forEach((users) => { %>
    <div class="flex w-[100%] items-center gap-14 rounded-lg flex-col md:flex-row shadow-lg">
        <div class="w-[80%] md:w-[30%]  rounded-md ">
          <div class="w-full flex justify-center items-center h-80 " style="background-color: <%= users.bgcolor%>;">
              <img class="h-[15rem]" src="data:image/jpeg;base64,<%= users.image.toString('base64') %>" alt="">
          </div>
          <div class="w-full flex justify-between px-5 py-4" style="background-color: <%= users.panelcolor%>;">
            <h3 class="text-2xl"><%= users.name%></h3>
            <div class="flex items-center gap-2">
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
              ></i>
              <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
              ></i>
            </div>
          </div>
          <div class="flex items-center text-white justify-between px-5 py-3"style="background-color: <%= users.textcolor%>;">
            <h4 class="text-lg">Net Total</h4>
            <h2 class="text-lg">₹<%= users.price + 20 - users.discount %> </h2>
          </div>
        </div>
        <div class="w-[70%]">
          <h3 class="text-xl">Price Breakdown</h3>
          <div class="px-10 mt-5">
            <div class="flex mt-2">
              <h4 class="w-1/3">Total MRP</h4>
              <h4>₹<%= users.price %></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Discount on MRP</h4>
              <h4>₹<%= users.discount%></h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Platform Fee</h4>
              <h4>₹20</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Shipping Fee</h4>
              <h4>FREE</h4>
            </div>
          </div>
          <div class="w-full h-[1px] bg-black mt-10"></div>
          <div class="flex mt-5">
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">₹<%= users.price + 20 - users.discount %></h3>
          </div>
          <form action=""></form>
        </div>
    </div>
<% }) %>
<% } %>
</div>
<%- include('./partials/footer') %>
